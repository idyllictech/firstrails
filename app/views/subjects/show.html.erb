<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="subject show">
  <h2>Show Subject</h2>

      <table summary="Subject detail view">
        <tr>
          <th>Name</th>
          <td><%= @subject.name %></td>
        </tr>
        <tr>
          <th>Position</th>
          <td><%= @subject.position %></td>
        </tr>
        <tr>
          <th>Visible?</th>
          <td><%= @subject.visible ? 'true' : 'false' %></td>
        </tr>
        <tr>
          <th>Created</th>
          <td><%= @subject.created_at.to_s(:long_ordinal) %></td>  
        </tr>
        <tr>
          <th>Updated</th>
          <td><%= @subject.updated_at.to_s(:cusdate) %></td>
        </tr>
      </table>
  
</div>
