<%= error_messages_for(@page) %>
<table summary="Page form fields">
  <tr>
    <th><%= f.label(:subjects_id, "Subject") %></th>    
    <td><%= f.collection_select(:subjects_id, Subject.all, :id, :name, prompt: true)%></td>
  </tr>
  <tr>
    <th><%= f.label(:name) %></th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th><%= f.label(:permalink) %></th>
    <td><%= f.text_field(:permalink) %></td>
  </tr>
  <tr>
    <th><%= f.label(:position) %></th>
    <td><%= f.select(:position, 1..@page_count, {}, {:style => "width: 4em;"}) %></td>
  </tr>
  <tr>
    <th><%= f.label(:visible) %></th>
    <td><%= f.check_box(:visible) %></td>
  </tr>
</table>
